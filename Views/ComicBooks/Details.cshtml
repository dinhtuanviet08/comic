@model ComicSystem.Models.ComicBook

@{
    ViewData["Title"] = "Comic Book Details";
}

<h1>Comic Book Details</h1>

<div class="form-group">
    <label>Name:</label>
    <p>@Model.Name</p>
</div>
<div class="form-group">
    <label>Author:</label>
    <p>@Model.Author</p>
</div>
<div class="form-group">
    <label>Price Per Day (VND):</label>
    <p>@Model.PricePerDay.ToString("N0")</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
