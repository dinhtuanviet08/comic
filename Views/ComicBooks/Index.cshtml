@model IEnumerable<ComicSystem.Models.ComicBook>

@{
    ViewData["Title"] = "Comic Book List";
}

<h1>Comic Book List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Comic Book</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Price Per Day (VND)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Author</td>
            <td>@item.PricePerDay.ToString("N0")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
